<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.asus.livelong.Temperature_Graph">

    <Button
        android:id="@+id/Clear_temparature"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Clear"


        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.jjoe64.graphview.GraphView

        android:id="@+id/temparature"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@+id/Clear_temparature" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temparature"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/Clear_temparature"
        android:layout_toStartOf="@+id/Clear_temparature"
        android:text="" />

</RelativeLayout>
